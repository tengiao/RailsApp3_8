<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <!-- <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol> -->
  <ol class="carousel-indicators">
    <% for i in 1..@products.length do %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= "active" if i == 1 %>"></li>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% @products.each do |product| %>
      <div class="carousel-item <%= "active" if product == @products.first %>">
        <div class="carousel-img">
          <%= image_tag(product.image_url, size: "400x300") %>
        </div>
        <!-- <div class="carousel-caption d-none d-md-block"> -->
        <div class="carousel-caption">
          <h3><%= link_to product.name, product %></h3>
        </div>
      </div>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<br><br><br>

<div class="new_product_button">
  <h4><%= link_to 'New Product', new_product_path %></h4>
</div>
